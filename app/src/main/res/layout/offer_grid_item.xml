<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.anipr.beaconstores"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="2dp"
    app:contentPaddingLeft="-2dp"
    app:contentPaddingRight="-2dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/list_item_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="140dp" >

            <ImageView
                android:id="@+id/offer_image"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/hello_world"
                android:focusable="false"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/offer_name"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/gradient"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="30dp"
                android:text="Demo Text One"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/offer_desc"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/list_item_relative_layout"
            android:layout_below="@+id/list_item_relative_layout"
            android:padding="16dp"
            android:textSize="16sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>